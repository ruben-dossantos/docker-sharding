#!/bin/bash

dpkg-divert --local --rename --add /sbin/initctl

ln -s /bin/true /sbin/initctl

echo "nameserver 192.35.246.20" >  /etc/resolv.conf

apt-key adv --keyserver hkp://keyserver.ubuntu.com:80 --recv 7F0CEB10

echo "
deb mirror://mirrors.ubuntu.com/mirrors.txt precise main universe
deb mirror://mirrors.ubuntu.com/mirrors.txt precise-updates main universe
deb mirror://mirrors.ubuntu.com/mirrors.txt precise-security main universe
deb http://downloads-distro.mongodb.org/repo/ubuntu-upstart dist 10gen
" > /etc/apt/sources.list

mkdir -p /data/db
mkdir -p /data/example/firstset1
mkdir -p /data/example/firstset2
mkdir -p /data/example/firstset3

apt-get -y update

apt-get install -y --force-yes mongodb-10gen

#mongod -shardsvr &

mongod --dbpath /data/example/firstset1 --port 10001 --replSet firstset --oplogSize 700 --rest &

mongod --dbpath /data/example/firstset2 --port 10002 --replSet firstset --oplogSize 700 --rest &

mongod --dbpath /data/example/firstset3 --port 10003 --replSet firstset --oplogSize 700 --rest &

/bin/bash
