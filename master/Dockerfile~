FROM ubuntu:latest

# Install start scripts and hosts file
ADD install/bin/install-mongo /usr/bin/
ADD install/bin/start-mongo /usr/bin/
ADD install/mongo/initial-data.json /data

# For RabbitMQ
# EXPOSE 5672

# For erlang
# EXPOSE 4369

# For RabbitMQ Admin
# EXPOSE 15672

# For MongoDB
# EXPOSE 28017

# For MongoDB_2
# EXPOSE 27017

# EXPOSE 27017:27017

